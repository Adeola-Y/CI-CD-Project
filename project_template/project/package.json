name: Continuous Integration (CI)

on: [push, pull_request]

jobs:
  lint:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '16'  # Use Node.js version 16 or higher

      - name: Install dependencies
        run: npm install
        working-directory: ./project_template/project  # Add this to specify the correct working directory

      - name: Run ESLint
        run: npx eslint . --fix
        working-directory: ./project_template/project  # Make sure eslint runs in the correct directory
